@page "/VideoList"
@inherits  VideoListBase
<h1>VideoList</h1>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>标题</th>
            <th>连接</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Videos.Count(); i++)
        {
            <tr>
                <td>@(i+1)</td>
                <td>@Videos[i].title</td>
                <td>
                    <a href="@($"{Videos[i].page_url}")" class="btn btn-primary btn-sm">
                        转到
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>